pipeline {
    agent any

    environment {
        IMAGE_NAME = "m0203/wordlife"
        IMAGE_TAG  = "latest"
        NAMESPACE  = "wordlife"
    }

    stages {

        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Verify Docker Image Exists (Non Blocking)') {
             steps {
                 sh '''
                 docker image inspect m0203/wordlife:latest || echo "Image not found locally, continuing pipeline"
                 '''
             }
        }


        stage('Security Scan (Trivy - Non Blocking)') {
            steps {
                sh """
                  trivy image \
                    --skip-db-update \
                    --scanners vuln \
                    --severity HIGH,CRITICAL \
                    --exit-code 0 \
                    ${IMAGE_NAME}:${IMAGE_TAG} || true
                """
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh """
                  helm upgrade --install wordlife \
                    manifests/wordlife_manifest-main/loginapp \
                    -n ${NAMESPACE} 
                """
            }
        }
    }
}
