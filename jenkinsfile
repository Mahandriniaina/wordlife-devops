pipeline {
    agent any

    environment {
        IMAGE_NAME = "m0203/wordlife"
        IMAGE_TAG  = "latest"
        NAMESPACE  = "wordlife"
    }

    stages {

        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Verify Docker Image') {
            steps {
                sh """
                  docker image inspect ${IMAGE_NAME}:${IMAGE_TAG}
                """
            }
        }

        stage('Security Scan (Trivy)') {
            steps {
                sh """
                  trivy image --exit-code 0 --severity HIGH,CRITICAL \
                  ${IMAGE_NAME}:${IMAGE_TAG}
                """
            }
        }

        stage('Deploy to Kubernetes') {
            steps {
                sh """
                  helm upgrade --install wordlife \
                    manifests/wordlife_manifest-main/loginapp \
                    -n ${NAMESPACE} 
                """
            }
        }
    }
}
